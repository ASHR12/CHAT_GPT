import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import org.apache.poi.ss.usermodel.Cell;
import org.apache.poi.ss.usermodel.Row;
import org.apache.poi.ss.usermodel.Sheet;
import org.apache.poi.ss.usermodel.Workbook;
import org.apache.poi.ss.usermodel.WorkbookFactory;

public class ReadExcelRowValues {

    public static void main(String[] args) {

        // specify the Excel file path and name
        String filePath = "path/to/excel/file.xlsx";

        try {
            // create a FileInputStream object to read the Excel file
            FileInputStream inputStream = new FileInputStream(new File(filePath));

            // create a Workbook object using the FileInputStream
            Workbook workbook = WorkbookFactory.create(inputStream);

            // get the first sheet of the workbook
            Sheet sheet = workbook.getSheetAt(0);

            // find the row index of the particular value in the first column
            int rowIndex = -1;
            for (Row row : sheet) {
                Cell cell = row.getCell(0);
                if (cell != null && cell.toString().equals("PARTICULAR VALUE")) {
                    rowIndex = row.getRowNum();
                    break;
                }
            }

            // if the particular value is found, read the entire row and return the result in an array
            if (rowIndex != -1) {
                List<String> rowValues = new ArrayList<>();
                Row row = sheet.getRow(rowIndex);
                if (row != null) {
                    for (Cell cell : row) {
                        rowValues.add(cell.toString());
                    }
                }
                String[] resultArray = rowValues.toArray(new String[0]);
                System.out.println("Result: " + String.join(",", resultArray));
            } else {
                System.out.println("PARTICULAR VALUE not found in the first column.");
            }

            // close the input stream and workbook
            inputStream.close();
            workbook.close();

        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
